Name: <%= @recipe.name %>
<br>
Ingredients <%= @recipe.ingredients %>
<br>
Cook time: <%= @recipe.cook_time %> minutes
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
      <label for="name">Name</label>
      <input id="name" type="text" name="recipe[name]" value="<%= @recipe.name %>" />
      <label for="ingredients">Ingredients</label>
      <textarea id="ingredients" type="text" name="recipe[ingredients]"  value="<%= @recipe.ingredients %>"><%= @recipe.ingredients %>
      </textarea>
      <label for="cook_time">Cook Time</label>
      <input id="cook_time" type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>" />
  <input type="submit" />
</form> 

