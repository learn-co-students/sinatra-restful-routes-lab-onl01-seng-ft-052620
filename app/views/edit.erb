<form action="/recipes/<%=@recipe.id%>" method="post">
    <input type="hidden" name="_method" value="PATCH">
        <textarea name="name" id="name" cols="30" rows="1">Recipe: <%=@recipe.name%></textarea> 
    <textarea name="ingredients" id="ingredients" cols="30" rows="10">ingredients: <%=@recipe.ingredients%></textarea> 
    <textarea name="cook_time" id="cook_time" cols="30" rows="1">Cook Time: <%=@recipe.cook_time%></textarea> 
    <div>
        <input type="submit" value="submit">
    </div>
</form>