<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @recipe.name %></title>
</head>
<body>
    <h1><%= @recipe.name %></h1>
    <p><%= @recipe.ingredients %></p>
    <p><%= @recipe.cook_time %></p>
